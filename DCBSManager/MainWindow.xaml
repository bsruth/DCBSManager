<Window x:Class="DCBSManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dcbsmgr="clr-namespace:DCBSManager"
        Title="DCBS Manager" Height="350" Width="525">
    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="All Items">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <dcbsmgr:SearchTextBox Grid.Row="0" Grid.Column="0" x:Name="titleSearch" LabelText="Search" Search="titleSearch_Search"  Height="20" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ElementName=DCBSList, Path=ItemsSource.Count, StringFormat='\{0} Items'}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <ListView x:Name="DCBSList" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch" SelectionMode="Single" Margin="0" Grid.Row="1" Grid.ColumnSpan="2" VirtualizingPanel.ScrollUnit="Pixel" VirtualizingPanel.CacheLength="2" VirtualizingPanel.CacheLengthUnit="Page">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <dcbsmgr:DCBSItemView Height="Auto" Width="{Binding Width, ElementName=DCBSList}" MouseUp="DCBSItemView_MouseUp"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Selected Items">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Content="Dump To Excel" Click="dumpSelectedItemsToExcel_Click"/>
                    <ListView Grid.Row="1" x:Name="SelectedList" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch" SelectionMode="Single" VirtualizingPanel.ScrollUnit="Pixel" VirtualizingPanel.CacheLength="2" VirtualizingPanel.CacheLengthUnit="Page">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <dcbsmgr:DCBSItemView Height="Auto" Width="{Binding ElementName=SelectedList, Path=Width}" MouseUp="DCBSItemView_MouseUp"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Cart">
                <WebBrowser x:Name="webBrowser"/>
            </TabItem>
        </TabControl>
        
        

    </Grid>
</Window>
